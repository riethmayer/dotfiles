# -*- mode: shell-script -*-
# $DOTFILES_DIR/bin
alias bb_port_forward="sudo ipfw add forward 127.0.0.1,3000 tcp from any to any 80 in"
alias h="common_cmd.sh"
alias dns="ec /etc/hosts; dscacheutil -flushcache"
alias egrep="egrep --color"
alias rgrep="ack --color -a"

# git
alias git="hub"

# ruby
export rvm_trust_rvmrcs_flag=1
alias b="bundle"
alias bu="bundle update"
alias rs="rails s"
alias rc="rails c"
alias be="bundle exec"
alias bake="bundle exec rake"
alias cuc="bundle exec cucumber"
alias s="rspec"
alias gs="bundle exec guard start"

# emacs
alias e="TERM=xterm-256color emacsclient -a '' -c"

# db
alias pqcore='psql -h localhost -p 35432 -U postgres -d core_production --pset="footer=off" -f'
alias pqretailers='psql -h localhost -p 35432 -U postgres -d retailers_production --pset="footer=off" -f'
alias pqtickets='psql -h localhost -p 35432 -U postgres -d tickets_production --pset="footer=off" -f'

# docker

alias dm=docker-machine
alias dc=docker-compose

# kubernetes
alias kd="kubectl --namespace=deis"

# jq

alias jq="jq -C"
alias less="less -R"

# Zencargo

alias zo="cd ~/zencargo/ocean && source .env"
alias za="cd ~/zencargo/air && source .env"

# Terraform

alias tf="terragrunt"

# aws_profiles

alias zprod="export AWS_PROFILE=zencargo-prod; export AWS_DEFAULT_PROFILE=zencargo-prod"
alias zstage="export AWS_PROFILE=zencargo-stage; export AWS_DEFAULT_PROFILE=zencargo-stage"
alias zdev="export AWS_PROFILE=zencargo-riethmayer; export AWS_DEFAULT_PROFILE=zencargo-riethmayer"

