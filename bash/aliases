alias rs="rails s"
alias rc="rails c"
alias r="rake"
alias be="bundle exec"
alias bake="bundle exec rake"
alias cuc="bundle exec cucumber"
alias s="rspec"
alias gs="bundle exec guard start"

# emacs
alias e="emacsclient -a '' -c"

# db
