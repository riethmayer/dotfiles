[push]
default = current

[alias]
  co = checkout
  st = status
  br = branch
  who = shortlog -s --
  df = diff
  ci = commit
  lg = log --oneline --decorate --all --graph
  s = status -s
  g = grep --extended-regexp --break --heading --line-number
  up = !git fetch origin && git rebase origin/master
  down = !git checkout master && git merge @{1} --ff-only
  score = !git log --pretty=format:%an | sort | uniq -ci | sort -r | head -n30
  find-change = "!f() { git log --reverse --patch --pickaxe-all -S \"$1\" ; }; f"
  hide   = update-index --assume-unchanged
  unhide = update-index --no-assume-unchanged
[user]
name = Jan Riethmayer
email = jan@riethmayer.de

[hub]
  protocol = https
[color]
	ui = true
[core]
	autocrlf = input
[pull]
	rebase = true
[rerere]
	enabled = true
